{
  "name": "ghx-router",
  "version": "1.0.0",
  "private": true,
  "description": "CLI-first GitHub execution router for agents.",
  "packageManager": "pnpm@10.17.0",
  "scripts": {
    "build": "nx run-many -t build",
    "build:affected": "nx affected -t build",
    "lint": "nx run-many -t lint",
    "lint:affected": "nx affected -t lint",
    "changeset": "changeset",
    "changeset:publish": "changeset publish",
    "changeset:status": "changeset status",
    "changeset:version": "changeset version",
    "test": "nx run-many -t test",
    "test:affected": "nx affected -t test",
    "test:coverage": "nx run-many -t test:coverage",
    "test:coverage:affected": "nx affected -t test:coverage",
    "typecheck": "nx run-many -t typecheck",
    "typecheck:affected": "nx affected -t typecheck",
    "ci": "nx run-many -t ci",
    "ci:affected": "nx affected -t ci",
    "benchmark:check": "pnpm --filter @ghx-router/benchmark run check:scenarios",
    "benchmark:run": "pnpm --filter @ghx-router/benchmark run run",
    "benchmark:report": "pnpm --filter @ghx-router/benchmark run report",
    "benchmark:gate": "pnpm --filter @ghx-router/benchmark run report:gate",
    "benchmark:typecheck": "nx run @ghx-router/benchmark:typecheck",
    "ghx:typecheck": "nx run @ghx-router/core:typecheck",
    "ghx:gql:check": "pnpm --filter @ghx-router/core run gql:check",
    "dep-graph": "nx graph",
    "cache:clean": "nx reset"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aryeko/ghx-router.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/aryeko/ghx-router/issues"
  },
  "homepage": "https://github.com/aryeko/ghx-router#readme",
  "dependencies": {},
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.35.0",
    "@nx/eslint": "22.0.3",
    "@nx/js": "22.0.3",
    "@types/node": "^25.2.3",
    "eslint": "^9.35.0",
    "globals": "^16.3.0",
    "nx": "22.0.3",
    "typescript-eslint": "^8.43.0",
    "typescript": "^5.9.3"
  }
}
