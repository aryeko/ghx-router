{
  "name": "ghx-router",
  "version": "1.0.0",
  "private": true,
  "description": "CLI-first GitHub execution router for agents.",
  "packageManager": "pnpm@10.17.0",
  "scripts": {
    "test": "nx run-many -t test --exclude=ghx-router",
    "test:affected": "nx affected -t test --exclude=ghx-router",
    "typecheck": "nx run-many -t typecheck --exclude=ghx-router",
    "typecheck:affected": "nx affected -t typecheck --exclude=ghx-router",
    "verify": "pnpm run test && pnpm run typecheck",
    "verify:affected": "pnpm run test:affected && pnpm run typecheck:affected",
    "benchmark:check": "nx run @ghx-router/benchmark:check-scenarios",
    "benchmark:run": "nx run @ghx-router/benchmark:run",
    "benchmark:report": "nx run @ghx-router/benchmark:report",
    "benchmark:gate": "nx run @ghx-router/benchmark:report-gate",
    "benchmark:typecheck": "nx run @ghx-router/benchmark:typecheck",
    "ghx:typecheck": "nx run @ghx-router/core:typecheck",
    "ghx:gql:check": "nx run @ghx-router/core:gql-check",
    "dep-graph": "nx graph",
    "cache:clean": "nx reset"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aryeko/ghx-router.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/aryeko/ghx-router/issues"
  },
  "homepage": "https://github.com/aryeko/ghx-router#readme",
  "dependencies": {},
  "devDependencies": {
    "@nx/js": "22.0.3",
    "@types/node": "^25.2.3",
    "nx": "22.0.3",
    "typescript": "^5.9.3"
  }
}
