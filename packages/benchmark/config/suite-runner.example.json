{
  "fixtures": {
    "setup": {
      "cleanup": {
        "command": ["rm", "-f", "reports/latest-summary.json", "reports/latest-summary.md"]
      },
      "seed": {
        "command": ["pnpm", "run", "bench:fixture", "--", "seed"]
      }
    }
  },
  "benchmark": {
    "base": {
      "command": ["pnpm", "run", "bench", "--"],
      "repetitions": 3,
      "scenarioSet": "ci-verify-pr"
    },
    "ghx": {
      "mode": "ghx",
      "env": {
        "GHX_SKIP_GH_PREFLIGHT": "1",
        "BENCH_OPENCODE_PORT": "3001"
      }
    },
    "direct": {
      "mode": "agent_direct",
      "env": {
        "BENCH_OPENCODE_PORT": "3002"
      }
    }
  },
  "reporting": {
    "analysis": {
      "report": {
        "command": ["pnpm", "run", "report"]
      },
      "gate": {
        "command": ["pnpm", "run", "report", "--", "--gate", "--gate-profile", "verify_pr"]
      }
    }
  }
}
