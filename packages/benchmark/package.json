{
  "name": "@ghx-router/benchmark",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint . --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage --coverage.reporter=lcov --coverage.reporter=text-summary",
    "test:watch": "vitest",
    "run": "tsx src/cli/benchmark.ts run",
    "check-scenarios": "tsx src/cli/check-scenarios.ts",
    "check:scenarios": "pnpm run check-scenarios",
    "report": "tsx src/cli/report.ts",
    "report-gate": "tsx src/cli/report.ts --gate",
    "report:gate": "pnpm run report-gate"
  },
  "nx": {
    "targets": {
      "ci": {}
    }
  },
  "dependencies": {
    "@opencode-ai/sdk": "^1.1.64",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.1.8",
    "@types/node": "^25.2.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8"
  }
}
