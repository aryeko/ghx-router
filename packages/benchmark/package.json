{
  "name": "@ghx-dev/benchmark",
  "version": "0.2.1",
  "description": "Internal benchmark harness for comparing ghx against agent_direct runs.",
  "private": true,
  "author": "Arye Kogan",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "lint": "eslint . --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --project unit",
    "test:watch": "vitest watch --project unit",
    "test:coverage": "vitest run --project unit --coverage",
    "test:e2e:local": "vitest run --project e2e:local --passWithNoTests",
    "test:e2e:sdk": "vitest run --project e2e:sdk --passWithNoTests",
    "bench": "tsx src/cli/index.ts run",
    "bench:fixture": "tsx src/cli/index.ts fixture",
    "bench:report": "tsx src/cli/index.ts report",
    "bench:check": "tsx src/cli/index.ts check",
    "fixtures:env:bootstrap": "bash scripts/bootstrap-fixture-app-env.sh",
    "check:scenarios": "tsx src/cli/index.ts check",
    "report": "tsx src/cli/index.ts report",
    "report:gate": "pnpm run report -- --gate",
    "verify:pr:direct": "BENCH_OPENCODE_PORT=3002 pnpm run bench -- agent_direct 3 --scenario-set ci-verify-pr",
    "verify:pr:ghx": "BENCH_OPENCODE_PORT=3001 pnpm run bench -- ghx 3 --scenario-set ci-verify-pr",
    "verify:pr:report": "pnpm run bench:report -- --gate --gate-profile verify_pr",
    "verify:release:direct": "BENCH_OPENCODE_PORT=3004 pnpm run bench -- agent_direct 4 --scenario-set ci-verify-release",
    "verify:release:ghx": "BENCH_OPENCODE_PORT=3003 pnpm run bench -- ghx 4 --scenario-set ci-verify-release",
    "verify:release:report": "pnpm run bench:report -- --gate --gate-profile verify_release"
  },
  "nx": {
    "targets": {
      "ci": {},
      "ci:extra": {
        "dependsOn": [
          "bench:check"
        ]
      },
      "verify:pr:direct": {
        "dependsOn": [
          "build"
        ],
        "cache": false
      },
      "verify:pr:ghx": {
        "dependsOn": [
          "build"
        ],
        "cache": false
      },
      "verify:pr:report": {
        "dependsOn": [
          "verify:pr:direct",
          "verify:pr:ghx"
        ],
        "cache": false
      },
      "verify:pr": {
        "dependsOn": [
          "verify:pr:direct",
          "verify:pr:ghx",
          "verify:pr:report"
        ]
      },
      "verify:release:direct": {
        "dependsOn": [
          "build"
        ],
        "cache": false
      },
      "verify:release:ghx": {
        "dependsOn": [
          "build"
        ],
        "cache": false
      },
      "verify:release:report": {
        "dependsOn": [
          "verify:release:direct",
          "verify:release:ghx"
        ],
        "cache": false
      },
      "verify:release": {
        "dependsOn": [
          "verify:release:direct",
          "verify:release:ghx",
          "verify:release:report"
        ]
      }
    }
  },
  "dependencies": {
    "@ghx-dev/core": "workspace:*",
    "@opencode-ai/sdk": "^1.2.6",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "tsup": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "catalog:"
  }
}
