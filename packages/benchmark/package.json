{
  "name": "@ghx-dev/benchmark",
  "version": "0.1.0",
  "description": "Internal benchmark harness for comparing ghx_router against agent_direct runs.",
  "private": true,
  "author": "Arye Kogan",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsup \"src/**/*.ts\" --format esm --out-dir dist --clean --no-dts --sourcemap",
    "lint": "eslint . --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage --coverage.reporter=text --coverage.reporter=text-summary --coverage.reporter=lcov",
    "test:watch": "vitest",
    "run": "tsx src/cli/benchmark.ts run",
    "check:scenarios": "tsx src/cli/check-scenarios.ts",
    "report": "tsx src/cli/report.ts",
    "report:gate": "tsx src/cli/report.ts --gate"
  },
  "nx": {
    "targets": {
      "ci": {
        "dependsOn": ["lint", "typecheck", "test", "build", "check:scenarios"]
      }
    }
  },
  "dependencies": {
    "@ghx-dev/core": "workspace:*",
    "@opencode-ai/sdk": "^1.1.64",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.1.8",
    "@types/node": "^25.2.3",
    "tsup": "^8.5.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8"
  }
}
