{
  "id": "repo-view-001",
  "name": "View repository metadata",
  "task": "repo.view",
  "input": {
    "owner": "OWNER_PLACEHOLDER",
    "name": "REPO_PLACEHOLDER"
  },
  "prompt_template": "Execute task {{task}} for repository {{fixture_repo}} using input {{input_json}}. Return only valid JSON matching this envelope: {\"ok\": boolean, \"data\": any, \"error\": object|null, \"meta\": object}.",
  "timeout_ms": 60000,
  "allowed_retries": 0,
  "fixture": {
    "repo": "aryeko/ghx-bench-fixtures",
    "bindings": {
      "input.owner": "repo.owner",
      "input.name": "repo.name"
    }
  },
  "assertions": {
    "require_tool_calls": true,
    "min_tool_calls": 1,
    "max_tool_calls": 4,
    "required_fields": [
      "ok",
      "data",
      "error",
      "meta"
    ],
    "required_data_fields": [
      "name",
      "nameWithOwner",
      "isPrivate"
    ],
    "required_meta_fields": [
      "route_used"
    ],
    "expected_route_used": "cli",
    "expected_outcome": "success"
  },
  "tags": [
    "repo",
    "view",
    "thin-slice"
  ]
}
