{
  "type": "workflow",
  "id": "pr-fix-review-comments-wf-001",
  "name": "Fix PR review comments",
  "prompt": "PR #{{prNumber}} in {{owner}}/{{name}} has unresolved review threads. Fetch the unresolved threads, then for each one reply with an appropriate response addressing the feedback and resolve it.",
  "expected_capabilities": ["pr.view", "pr.threads.list", "pr.threads.reply", "pr.threads.resolve"],
  "timeout_ms": 180000,
  "allowed_retries": 1,
  "fixture": {
    "repo": "aryeko/ghx-bench-fixtures",
    "bindings": {
      "input.owner": "repo.owner",
      "input.name": "repo.name",
      "input.prNumber": "resources.pr_with_reviews.number"
    },
    "requires": ["pr_with_reviews"],
    "reseed_per_iteration": true
  },
  "assertions": {
    "expected_outcome": "success",
    "checkpoints": [
      {
        "name": "all_threads_resolved",
        "verification_task": "pr.threads.list",
        "verification_input": {
          "unresolvedOnly": true
        },
        "condition": "empty"
      }
    ]
  },
  "tags": ["workflow", "pr", "review"]
}
