{
  "type": "workflow",
  "id": "pr-review-comment-wf-001",
  "name": "Review PR diff and leave comment review",
  "prompt": "Review PR #{{prNumber}} in {{owner}}/{{name}}. View the PR details, check which files changed, and submit a comment-only review summarizing what the PR does.",
  "expected_capabilities": ["pr.view", "pr.diff.list_files", "pr.review.submit_comment"],
  "timeout_ms": 180000,
  "allowed_retries": 1,
  "fixture": {
    "repo": "aryeko/ghx-bench-fixtures",
    "bindings": {
      "input.owner": "repo.owner",
      "input.name": "repo.name",
      "input.prNumber": "resources.pr.number"
    },
    "requires": ["pr"]
  },
  "assertions": {
    "expected_outcome": "success",
    "checkpoints": [
      {
        "name": "review_submitted",
        "verification_task": "pr.reviews.list",
        "verification_input": {},
        "condition": "non_empty"
      }
    ]
  },
  "tags": ["workflow", "pr", "review"]
}
