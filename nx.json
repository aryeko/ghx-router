{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "{projectRoot}/dist"
      ],
      "cache": true
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ],
      "cache": true
    },
    "test": {
      "dependsOn": [
        "^test"
      ],
      "cache": true
    },
    "typecheck": {
      "dependsOn": [
        "^typecheck"
      ],
      "cache": true
    },
    "gql-check": {
      "cache": false
    },
    "check-scenarios": {
      "cache": false
    },
    "report": {
      "cache": false
    },
    "report-gate": {
      "cache": false
    },
    "ci": {
      "dependsOn": [
        "lint",
        "typecheck",
        "test",
        "build"
      ],
      "cache": false
    }
  },
  "plugins": [
    "@nx/js"
  ]
}
