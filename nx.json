{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "parallel": 3,
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": true
    },
    "test": {
      "dependsOn": ["^test"],
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "cache": true
    },
    "ci": {
      "dependsOn": ["lint", "typecheck", "test", "build"],
      "cache": false
    },
    "test:e2e": {
      "dependsOn": ["test:e2e:local", "test:e2e:sdk"],
      "cache": false
    },
    "test:e2e:sdk": {
      "dependsOn": ["build"]
    },
    "test:e2e:local": {
      "dependsOn": ["build"]
    }
  },
  "plugins": [
    "@nx/js",
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "eslint:lint"
      }
    }
  ]
}
