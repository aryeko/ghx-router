{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "parallel": 3,
  "targetDefaults": {
    "format": {
      "cache": false
    },
    "format:check": {
      "cache": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "cache": true
    },
    "build": {
      "dependsOn": ["^build", "typecheck"],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "test": {
      "dependsOn": ["^test", "typecheck"],
      "cache": true
    },
    "test:coverage": {
      "dependsOn": ["^test:coverage", "typecheck"],
      "cache": false
    },
    "ci": {
      "dependsOn": ["format:check", "lint", "typecheck", "test:coverage", "build"],
      "cache": false
    },
    "test:e2e": {
      "dependsOn": ["test:e2e:local", "test:e2e:sdk"],
      "cache": false
    },
    "test:e2e:sdk": {
      "dependsOn": ["build"]
    },
    "test:e2e:local": {
      "dependsOn": ["build"]
    }
  },
  "plugins": [
    "@nx/js",
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "eslint:lint"
      }
    }
  ],
  "nxCloudId": "6990cfdeb641322dd2b87b5a"
}
